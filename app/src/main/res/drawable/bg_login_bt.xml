<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置半透明背景色 -->
    <solid android:color="#11000000" />

    <!-- 设置一个边框 -->
    <stroke
        android:width="2px"
        android:color="#FF6666" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="8px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>